<Window x:Class="ZAD3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZAD3"
        mc:Ignorable="d"
        Title="Candy Prices" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Цена за кг конфет:"/>
            <TextBox x:Name="PriceTextBox"/>
            <Button x:Name="CalculateButton" Content="Calculate" Margin="0 10" Click="CalculateButton_Click"/>
        </StackPanel>
        <ListBox x:Name="ResultListBox" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
